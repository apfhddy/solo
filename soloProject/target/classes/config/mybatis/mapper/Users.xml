<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="users">
	<!-- SQL문들을 작성하는 파일 -->
	<select id="nextSequence" resultType="int">
		select Users_seq.nextval from dual
	</select>
	
	<insert id="insertUser" parameterType="detail.Users.Users_DTO">
		insert into Users values(#{user_no},#{email},#{pw},#{salt},#{userAddr_no},#{name},#{gender},#{phone})
	</insert>
	
	<select id="userData" resultType="map" parameterType="String">
		select * from Users u
		inner join User_Address ua
		on u.userAddr_no = ua.userAddr_no
		where email = #{id}
	</select>
</mapper>












